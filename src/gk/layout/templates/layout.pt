<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="gk.layout">
  <head>
    <title tal:content="layout.title" />
    <base tal:attributes="href request.script_name + '/'" />
  </head>
  <body>
    <div class="alert" tal:condition="gatekeeper_messages">
      <button type="button" class="close" data-dismiss="alert"
	      >&times;</button>
      <div tal:repeat="message gatekeeper_messages">
        <span tal:content="message.message" />
      </div>
    </div>
    <div id="top">
      <div class="cta cta-index">
        <div class="container">
          <h1 i18n:translate="Gatekeeper">Gatekeeper</h1>
        </div>
      </div>
    </div>
    <div id="subtop" tal:condition="user">
      <div class="container">
	<h2 class="small">
	  <i class="icon-user icon-white"></i>
	     <span i18n:translate="">Keeping the gate for</span>
	     <span tal:replace="user" />
	</h2>
      </div>
    </div>
    <div id="subtop" tal:condition="not user">
      <div class="container">
	<h2 class="small" >
	  <i class="icon-lock icon-white"></i>
	  <a href="login"
	     ><span i18n:translate="">Please login</span
	  ></a>
	</h2>
      </div>
    </div>
    <div class="container" id="topmenus" tal:content="structure slot:top" />
    <div id="body">
      <div class="container">
	<div class="content">
	  <div tal:replace="structure content" />
	</div>
      </div>
    </div>
    <footer class="footer modal-footer"
	    tal:content="structure slot:footer" />
  </body>
</html>
