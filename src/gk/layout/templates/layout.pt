<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/x
html1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <title tal:content="layout.title" />
    <base tal:attributes="href request.script_name + '/'" />
  </head>
  <body>
    <div class="alert" tal:condition="gatekeeper_messages">
      <button type="button" class="close" data-dismiss="alert"
	      >&times;</button>
      <div tal:repeat="message gatekeeper_messages">
        <span tal:content="message.message" />
      </div>
    </div>
    <div id="top">
      <div class="cta cta-index">
        <div class="container">
          <h1>Gatekeeper</h1>
        </div>
      </div>
    </div>
    <div id="subtop" tal:condition="user">
      <div class="container">
	<h2 class="small">
	  <i class="icon-user icon-white"></i>
	  Keeping the gate for <span tal:replace="user" />
	</h2>
      </div>
    </div>
    <div id="subtop" tal:condition="not user">
      <div class="container">
	<h2 class="small">
	  <i class="icon-lock icon-white"></i>
	  <a href="http://sso.novareto.de:8000/login">Please login</a>
	</h2>
      </div>
    </div>
    <div tal:content="structure slot:top" />
    <div id="body">
      <div class="container">
	<div class="content">
	  <div tal:replace="structure content" />
	</div>
      </div>
    </div>
    <footer class="footer modal-footer"
	    tal:content="structure slot:footer" />
  </body>
</html>
