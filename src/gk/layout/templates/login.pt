<div i18n:domain="npai.authentication">
  <h2 tal:content="message" />

  <form id="login-form" method="POST" action="">
    <fieldset>
      <input type="hidden" name="back" id="back" value=""
	     tal:attributes="value back" />
      <div class="username">
	<label tal:attributes="for user_field"
	       i18n:translate="">Username</label>
	<input type="text"
	       tal:attributes="name user_field;
			       id user_field;
			       value username" />
      </div>
      <div class="password">
	<label tal:attributes="for pass_field"
	       i18n:translate="">Password</label>
	<input type="password"
	       tal:attributes="name pass_field;
			       id pass_field;" />
      </div>
      <div class="actions">
	<button type="submit" value="submit"
		tal:attributes="id button; name button;"
		i18n:translate=""
		>Sign in</button>
      </div>
    </fieldset>
  </form>
</div>
